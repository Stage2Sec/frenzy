    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "name": "Run",
            "request": "launch",
            "runtimeArgs": [ "start" ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "Build Frenzy",
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "envFile": "${workspaceFolder}/.env",
        }
    ]
}